th[sort]
	cursor pointer
th[sort]::after
	content '↕'
	position absolute
	line-height 1.6
	opacity 0.5
	right 1rem
th[sort]:hover
	background-color #a4adec
th[sort].asc::after
	opacity 0.7
	content '↑'
th[sort].desc::after
	opacity 0.7
	content '↓'

td
	padding-top 0.75rem
	padding-bottom 0.75rem
	color #808080

td.na
	user-select none
	color #ddd

tr:nth-child(even) td
	background #f8f6ff

.btn
	font-size 0.6rem
	padding 0.5rem
.btn[disabled]
	cursor not-allowed
	opacity 0.3

footer
	position fixed
	font-size 1rem
	padding 0.5rem 1.5rem
	background-color $blue1
	border-top-left-radius 4px
	border 2px solid $blue4
	font-weight bold
	bottom -2px
	right -4px
