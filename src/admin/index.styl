@require "-root"
@require "-inputs"

body
	overflow-x scroll

table
	--min 10rem
	display grid
	min-width 100%
	border-collapse collapse
	// initial values – overridden via JS resizer(s)
	grid-template-columns minmax(6rem, 1fr) repeat(var(--n, 5), minmax(var(--min), 2fr))

thead, tbody, tr
	display contents

th, td
	padding 1rem
	overflow hidden
	text-overflow ellipsis
	white-space nowrap

// td:nth-child(5), // status
// td:nth-child(10) // CFTV
// 	text-align center

th
	color white
	text-align left
	font-size 1.1rem
	background #6c7ae0
	font-weight normal
	position relative
	position sticky
	top 0

th:last-child
	border 0

