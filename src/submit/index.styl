@require "float"
@require "-inputs"

.card
	margin-top 4rem

form
	display grid
	margin-top 4rem
	grid-gap 1.5rem
	gap 1.5rem

form .btn
	margin-top 1.5rem

.fw
	grid-column 1/3

label.check
	display inline-flex
	align-items center

input[type=checkbox]
	width 1.25rem
	height 1.25rem
	-moz-appearance none
	display inline-block
	vertical-align top
	position relative
	cursor pointer
	margin-right 0.5rem
	border-radius 4px
	border 1px solid rgba(#7C8794, 0.5)
	background-color $white
	transition background-color 300ms, border-color 300ms, box-shadow 200ms
	@extend $focus-ring

	&:after
		content ''
		display block
		position absolute
		opacity 0
		left 0
		top 0
		transition transform 300ms ease, opacity 200ms
		transform rotate(20deg)
		width 5px
		height 9px
		border 2px solid $white
		border-left 0
		border-top 0
		left 7px
		top 4px

	&:checked
		background-color $orange2
		border-color $orange2
	&:checked:after
		transition transform 600ms cubic-bezier(.2, .85, .32, 1.2), opacity 300ms
		transform rotate(43deg)
		opacity 1

	&:disabled
		background-color rgba(#7C8794, 0.5)
		cursor not-allowed
		opacity .9
		&:checked
			background-color #E1E6F9
			border-color rgba(#7C8794, 0.5)

		// & + label
		// 	cursor not-allowed

	&:hover:not(:checked):not(:disabled)
		border-color $orange2

	&:focus
		box-shadow 0 0 0 2px $selection
